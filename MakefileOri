### COMPILATION ###
CC		= gcc
CFLAGS	= -Wall -Wextra -Werror

### EXECUTABLE ###
NAME	= pipex

### INCLUDES ###



### SOURCE FILES ###
SRCS	= 	ft_pipex.c \
			ft_parsing.c \
			ft_tools.c \

### OBJECTS ###
OBJS	= ${SRCS:.c=.o}



### RULES ###
RM		= rm -rf

${NAME}:	${OBJS}
		@${MAKE} -C ./libft
		@${CC} ${CFLAGS} ${OBJS} ./lib/libft/libft.a -o ${NAME}

all:	${NAME}

clean:
		@${MAKE} -C ./libft fclean
		${RM} ${OBJS}

fclean:	clean
		${RM} ${NAME}

re:		fclean all

push:
	git add .
	git status
	git commit -m pipex
	git push

.PHONY:	all clean fclean re push
